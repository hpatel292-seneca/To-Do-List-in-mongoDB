<%- include("header") -%>
<div class="box">
    <h1><%= title %></h1>
    </div>
        <div class="box">
            <% for (let i = 0; i < newListItem.length; i++) { %>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" name="check" value=<%= newListItem[i]._id %>>
                    <p><%= newListItem[i].name %></p>
                    </div>
                    <input type="hidden" name="listName" value=<%= title %>>
                </form>
            <%  } %>
        <form action="/" method="post" class="item">
            <input type="text" name="task" placeholder="New Item" autocomplete="off">
            <button type="submit" name="page" value=<%= page %>>+</button>
            
        </form>
</div>

<%- include("footer") -%>